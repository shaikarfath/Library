<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <%- include("static/styles.css"); %>
        <title>Open Library</title>

</head>

<body>
    <!-- Bootstrap Nav -->

    <ul class="nav justify-content-center">
        <div class="nav">
            <li class="nav-item1">
                <a class="nav-link" href="/">
                    <img
                        src="https://img.icons8.com/external-kiranshastry-gradient-kiranshastry/64/000000/external-book-online-learning-kiranshastry-gradient-kiranshastry-2.png"></a>
            </li>
            <li class="nav-item2">
                <a class="nav-link" href="/authors">Authors</a>
            </li>
            <li class="nav-item3">
                <a class="nav-link" href="/titles">Titles</a>
            </li>
            <li class="nav-item4">
                <a class="nav-link" href="/series">Popular Series</a>
            </li>
            <li class="nav-item5">
                <a class="nav-link" href="/antiq">Antiquarians</a>
            </li>
        </div>
    </ul>



    <!-- Bootstrap Search -->
    <div class="look">
        <div class="container1">
            <div class="row">

                <form action="/" method="POST">
                    <div class="input1">
                        <input class="form-control form-control-lg form-control-borderless" type="search" id="keyword"
                            name="keyword" placeholder="What would you like to search?">
                    </div>
                    <button class="btn btn-lg btn-success" formaction="/" type="submit">Search</button>
                </form>
            </div>
        </div>
    </div>


    

    <% if (booksdata !=null) { %>
        <h2>
            <center>Here are the top 10 books from your request:</center>
        </h2>
        <br />
    
        <br />
        <br />
        <br />
        <% for(var i=0; i < 10; i++) {%>
            <div class="col">
    
                <div>
                    <center>
                        <div class="title">
                            <%- booksdata.items[i].volumeInfo.title %>
                        </div>
                        <br />
                        <div class="author">
                            <%- booksdata.items[i].volumeInfo.authors %>
                        </div>
                        <br />
                        <div class="image">
                            <center><a href="<%- booksdata.items[i].volumeInfo.canonicalVolumeLink %>"><img
                                        src="<%- booksdata.items[i].volumeInfo.imageLinks.smallThumbnail %>"></a></center>
                        </div>
                        <br />
                        <br />
                        <div class="des">
                            <%- booksdata.items[i].volumeInfo.description %>
                        </div>
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                        <br />
                    </center>
                </div>
    
    
            </div>
            <% } %>
                <% } %>


                    <!-- About US section-->

                    <section>
                        <div class="content">
                            <h1>ABOUT US!</h1>

                            <p>We, as a team, created this website to provide the users with the books and the links to
                                where they
                                can purchase them. Navigate to the other pages to search books either by Authors or
                                Series or Titles.
                            </p>

                            <p>
                                Have fun browsing...!!!
                            </p>

                        </div>
                    </section>


                    <!-- Bootstrap Footer -->
                    <section>
                        <footer class="footer">
                            <div class="container2">
                                <div class="row">
                                    <div class="col-md-2">
                                        <div class="row">
                                            <div class="col-6">
                                                <ul>
                                                    <h5>Team</h5>
                                                    <li>Arfath Shaik</li>
                                                    <li>Kiranmai Machiraju</li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <h5 class="text-md-right">Contact Us</h5>
                                        <hr>
                                    </div>
                                    <div class="col-md-5">
                                        <form>
                                            <fieldset class="form-group">
                                                <input type="email" class="form-control" id="exampleInputEmail1"
                                                    placeholder="Enter email">
                                            </fieldset>
                                            <fieldset class="form-group">
                                                <textarea class="form-control" id="exampleMessage"
                                                    placeholder="Message"></textarea>
                                            </fieldset>
                                            <fieldset class="form-group text-xs-right">
                                                <button type="button"
                                                    class="btn btn-secondary-outline btn-lg">Send</button>
                                            </fieldset>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </footer>
                    </section>

                    <!-- Option 1: Bootstrap Bundle with Popper -->
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                        crossorigin="anonymous"></script>

</body>

</html>