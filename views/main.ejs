<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>

    <%- include("static/styles.css"); %>
        <title>Open Library</title>

</head>

<body>
    <ul class="nav justify-content-center">
        <div class="nav">
            <li class="nav-item1">
                <a class="nav-link" href="/">
                    <img
                        src="https://img.icons8.com/external-kiranshastry-gradient-kiranshastry/64/000000/external-book-online-learning-kiranshastry-gradient-kiranshastry-2.png"></a>
            </li>
            <li class="nav-item2">
                <a class="nav-link" href="/authors">Authors</a>
            </li>
            <li class="nav-item3">
                <a class="nav-link" href="/titles">Titles</a>
            </li>
            <li class="nav-item4">
                <a class="nav-link" href="/series">Popular Series</a>
            </li>
            <li class="nav-item5">
                <a class="nav-link" href="/antiq">Antiquarians</a>
            </li>
        </div>
    </ul>

    <center>
        <div class="look">
            <div class="container1">
                <div class="row">

                    <form action="/" method="POST">
                        <div class="input1">
                            <input class="form-control form-control-lg form-control-borderless" type="search"
                                id="keyword" name="keyword" placeholder="Search Here">
                        </div>
                        <div class="btn">
                            <button class="btn btn-lg btn-success" formaction="/" type="submit">Search</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </center>


    <div class="data">
        <% if (booksdata !=null) { %>
            <h2>
                <center>Here are the top books from your request</center>
            </h2>
            <br />

            <br />
            <br />
            <br />
            <% for(var i=0; i < length; i++) {%>
                <center>
                    <div class="row1">
                        <div class="col-6">
                            <div class="card">


                                <div>
                                    <center>
                                        <div class="title">
                                            <%- booksdata.items[i].volumeInfo.title %>
                                        </div>
                                        <br />
                                        <div class="author">
                                            <%- booksdata.items[i].volumeInfo.authors %>
                                        </div>
                                        <br />
                                        <div class="image">
                                            <center><a
                                                    href="<%- booksdata.items[i].volumeInfo.canonicalVolumeLink %>"><img
                                                        src="<%- booksdata.items[i].volumeInfo.imageLinks.smallThumbnail %>"></a>
                                            </center>
                                        </div>
                                        <br />
                                        <br />

                                        <div class="bookdes">
                                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                                data-bs-target="#booksdata<%= i %>">
                                                Book Description
                                            </button>
                                        </div>

                                        <br />
                                        <br />

                                    </center>
                                </div>

                            </div>

                            <div class="modal fade" id="booksdata<%= i %>" tabindex="-1"
                                aria-labelledby="#booksdata<%= i %>" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="staticBackdropLabel">
                                                <div class="title">
                                                    <%- booksdata.items[i].volumeInfo.title %>
                                                </div>
                                            </h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="des">
                                                <%- booksdata.items[i].volumeInfo.description %>

                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </center>
                <% } %>
                    <% } %>


    </div>

    <section>
        <div class="content">
            <h1>ABOUT US!</h1>

            <p>We, as a team, created this website to provide the users with the books and the links to
                where they
                can purchase them. Navigate to the other pages to search books either by Authors or
                Series or Titles.
            </p>

            <p>
                Have fun browsing...!!!
            </p>

        </div>
    </section>

    <section>
        <footer class="footer">
            <div class="container2">
                <div class="row">
                    <div class="col-md-3">
                        <div class="row">
                            <div class="col-3">
                                <ul>
                                    <h5>Team</h5>
                                    <li>Arfath Shaik</li>
                                    <li>Kiranmai Machiraju</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <h5 class="text-md-right">Contact Us</h5>
                        <hr>
                    </div>
                    <div class="col-md-3">
                        <form>
                            <fieldset class="form-group">
                                <input type="email" class="form-control1" id="exampleInputEmail1"
                                    placeholder="Enter email">
                            </fieldset>
                            <fieldset class="form-group">
                                <textarea class="form-control1" id="exampleMessage" placeholder="Message"></textarea>
                            </fieldset>
                            <div class="form_btn">
                                <button type="button" class="btn btn-secondary-outline btn-lg">Send</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </footer>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>

</body>

</html>